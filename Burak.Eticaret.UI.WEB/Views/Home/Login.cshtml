
@{
    ViewBag.Title = "Login";
}

<style>
    .left{
        width:120px;
        float:left;

    }


    .right {
        width: 120px;
        float: left;
    }
</style>
<br />
<br />
<h2>Üye Giriş Sayfası</h2>
<br/>
@{ 
    if (ViewBag.Error!=null)
    {
<div class="alert alert-danger" >
    @ViewBag.Error
</div>
    }
}

<form action="/uye-giris" method="post">
    
    <div class="left">
        @Html.Label("Eposta Adresi")
    </div>

    <div class="right">
        @Html.TextBox("Email")
    </div>

    <div class="row"></div>
    <div class="left">
        @Html.Label("Şifre")
    </div>

    <div class="right">
        @Html.Password("Password")
    </div>
    <div class="row"></div>

    <button type="submit">Giriş Yap</button>

</form>